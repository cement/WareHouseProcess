<?xml version="1.0" encoding="utf-8"?>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_title_LocName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:padding="3dp"
            android:clickable="true"
            android:textSize="18sp"
            android:background="@drawable/titile_button_background_selector"
            android:text="货位"/>

        <TextView
            android:id="@+id/item_title_InspSeqNo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="2"
            android:padding="3dp"
            android:clickable="true"
            android:textSize="18sp"
            android:background="@drawable/titile_button_background_selector"
            android:text="验号"/>

        <TextView
            android:id="@+id/item_title_quantity"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:padding="3dp"
            android:clickable="true"
            android:textSize="18sp"
            android:background="@drawable/titile_button_background_selector"
            android:text="数量"/>

        <TextView
            android:id="@+id/item_title_shippingArea"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:padding="3dp"
            android:gravity="center"
            android:clickable="true"
            android:textSize="18sp"
            android:text="集号"/>

        <!--<TextView
            android:id="@+id/item_title_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:gravity="center"
            android:text="操作"/>-->
    </LinearLayout>


