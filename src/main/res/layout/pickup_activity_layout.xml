<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/pickup_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="?attr/actionBarSize"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <FrameLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@drawable/base_input_edittext">
                <android.support.v7.widget.SearchView
                    android:id="@+id/pickup_input_searchview"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:focusableInTouchMode="true"
                    android:focusable="true">

                </android.support.v7.widget.SearchView>


            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <ImageView
                    android:id="@+id/pickup_zxing_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="6dp"
                    app:srcCompat="@drawable/icon_zxing"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="4dp"
                android:gravity="center_vertical">
                <Button
                    android:id="@+id/pickup_input_obtainbutton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/base_button_background"
                    android:textColor="#ffffffff"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:text="领单"/>
            </FrameLayout>

        </LinearLayout>




        <!--<View
            android:background="#abaaaa"
            android:layout_width="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_height="0.5dp"/>-->

        <LinearLayout
            android:id="@+id/pickup_current_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"

                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:textStyle="bold"
                        android:text="调度单号:"/>
                    <TextView
                        android:id="@+id/pickup_content_packbillno"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textSize="16sp"

                        android:textColor="#0913ec"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="right|center_vertical">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="10"
                        android:layout_height="wrap_content"


                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:text="流转车号："/>
                    <TextView
                        android:id="@+id/pickup_chehao"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="#f52828"
                        android:textStyle="bold"
                        android:layout_marginRight="12dp"
                        android:text=""/>
                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:text="发货员："/>
                    <TextView
                        android:id="@+id/pickup_pckokperson"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="#16b393"
                        android:text=""/>
                </LinearLayout>
                <!--<TextView
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:text="复核员："/>
                <TextView
                    android:id="@+id/pickup_checkperson"
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#b605b3"
                    android:text=""/>-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:text="进度："/>
                    <TextView
                        android:id="@+id/pickup_content_amount_hint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="#28d0d9"
                        android:layout_marginRight="12dp"
                        android:text=""/>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


        <!--<View
            android:background="#abaaaa"
            android:layout_width="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_height="0.5dp"/>-->


        <include layout="@layout/pickup_item_title"></include>

        <View
            android:background="#cacaca"
            android:layout_width="match_parent"
            android:layout_marginTop="2dp"
            android:layout_height="2dp"/>
        <FrameLayout
            android:id="@+id/pickup_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/pickup_prompt_success"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="invisible"
                android:textSize="20sp"
                android:gravity="center"
                android:text="成功"/>
            <TextView
                android:id="@+id/pickup_prompt_error"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="invisible"
                android:textSize="20sp"
                android:gravity="center"

                android:text="错误"/>

        </FrameLayout>
        <!--<FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/main_submit_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="提交"/>
        </FrameLayout>
-->



    </LinearLayout>
    <android.support.design.widget.BottomNavigationView
        android:id="@+id/pickup_bottom_navigationview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/pickup_bottom_navigation_menu">
    </android.support.design.widget.BottomNavigationView>

 <!-- <android.support.design.widget.FloatingActionButton
        android:id="@+id/pickup_footer_floatbutton"
        android:layout_width="wrap_content"
