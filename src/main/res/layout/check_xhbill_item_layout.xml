<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/check_xhbill_locname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="18sp"
        android:padding="6dp"
        android:layout_weight="1"
        android:text="货位"/>
    <TextView
        android:id="@+id/check_xhbill_InvSeqNo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="18sp"
        android:padding="6dp"
        android:layout_weight="1"
        android:text="验号"/>

    <!--<TextView
        android:id="@+id/check_item_LocName"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:textSize="18sp"
        android:textColor="#009688"
        android:layout_weight="1" />-->

    <TextView
        android:id="@+id/check_xhbill_comname"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:textSize="18sp"
        android:gravity="center"
        android:text="名称"/>

    <TextView
        android:id="@+id/check_xhbill_shippingArea"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="18sp"
        android:padding="6dp"
        android:layout_weight="1"
        android:text="集号"/>


    <TextView
        android:id="@+id/check_xhbill_quantity"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_weight="1"
        android:text="数量"/>



</LinearLayout>
