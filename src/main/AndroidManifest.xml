<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.changqing.warehouse">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <!-- 相机 -->
    <uses-permission android:name="android.permission.CAMERA" />
    <!-- 振动 -->
    <uses-permission android:name="android.permission.VIBRATE" />

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21"
        android:maxSdkVersion="25"/>
    <application
        android:name=".app.App"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/icon_lanucher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon_lanucher"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.changqing.warehouse.mian.LoginActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:launchMode="singleInstance">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.changqing.warehouse.mian.PickupActivity"
            android:label="发货"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:launchMode="singleInstance"
            android:windowSoftInputMode="stateAlwaysHidden"/>
        <activity
            android:name="com.changqing.warehouse.mian.CheckActivity"
            android:screenOrientation="portrait"
            android:label="复核"
            android:launchMode="singleInstance"
            android:windowSoftInputMode="stateAlwaysHidden" />

        <activity
            android:name="com.changqing.warehouse.mian.CheckXHbillActivity"
            android:screenOrientation="portrait"
            android:label="复核集号查询"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name="com.changqing.warehouse.zxing.QrcActivity"
            android:label="二维码"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name="com.changqing.warehouse.mian.TestActivity"
            android:label="二维码"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name="com.xys.libzxing.zxing.activity.CaptureActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            android:windowSoftInputMode="stateAlwaysHidden">

        </activity>

        <provider
            android:name="com.changqing.warehouse.provider.RemoteContentProvider"
            android:authorities="RemoteContentProvider"
            android:enabled="true"
            android:exported="true" />
        <provider
            android:name="com.changqing.warehouse.provider.LocalContentProvider"
            android:authorities="LocalContentProvider"
            android:enabled="true"
            android:exported="true" />

        <provider
            android:name="com.changqing.warehouse.provider.LoginPromptProvider"
            android:authorities="com.changqing.warehouse.provider.LoginPromptProvider"
            android:enabled="true"
            android:exported="true" />


    </application>

</manifest>